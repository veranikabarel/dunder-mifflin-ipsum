{
  "name": "dunder-mifflin-ipsum",
  "version": "1.0.1",
  "description": "Package for generating placeholder text for developers projects in the 'The Office' style",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veranikabarel/dunder-mifflin-ipsum"
  },
  "keywords": [
    "dunder miffllin",
    "the office",
    "lorem ipsum generator"
  ],
  "author": "VK",
  "bugs": {},
  "homepage": "https://github.com/veranikabarel/dunder-mifflin-ipsum",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "eslint-plugin-sonarjs": "^0.20.0",
    "jest": "^29.6.3",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6"
  }
}
